<%- include('/header.ejs', { refresh: false }) -%>

    <form class="inline_form" action="/package/search" method="get">
        <input id="query" name="query" placeholder="Search for package" type="search" />
        <button type="submit">Search</button>
    </form>

    <h2>Results for '<%= query %>'</h2>

    <ul>
        <%_ results.forEach(function(result) { -%>
        <li><a href="/package/<%= encodeURIComponent(result.name) %>" title="<%= result.name %>">
            <%= result.name %>: <%= result.summary %>
        </a></li>
        <%_ }); -%>
    </ul>
<%- include('/footer.ejs') -%>
